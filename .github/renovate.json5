{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "assignees": [
        "alvr",
    ],
    "baseBranches": [
        "develop",
    ],
    "extends": [
        "config:base",
        ":disableDependencyDashboard",
    ],
    "rebaseWhen": "behind-base-branch",
    "reviewers": [
        "alvr",
    ],
    "packageRules": [
        {
            "groupName": "Kotlin Dependants",
            "groupSlug": "kotlin",
            "matchPackagePrefixes": [
                "com.google.devtools.ksp",
                "org.jetbrains.compose",
                "dev.mokkery",
            ],
            "matchPackagePatterns": [
                "org.jetbrains.kotlin.*",
            ],
        },
        {
            "groupName": "Koin",
            "groupSlug": "koin",
            "matchPackagePrefixes": [
                "io.insert-koin",
            ],
        },
        {
            "groupName": "Kotest",
            "groupSlug": "kotest",
            "matchPackagePrefixes": [
                "io.kotest",
                "io.kotest.extensions",
            ],
        },
        {
            "groupName": "Sentry",
            "groupSlug": "sentry",
            "matchPackagePrefixes": [
                "io.sentry",
            ],
        },
        {
            "automerge": false,
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest",
            ]
        },
    ],
}
