{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "assignees": [
        "alvr",
    ],
    "baseBranches": [
        "develop",
    ],
    "extends": [
        "config:base",
        ":disableDependencyDashboard",
    ],
    "rebaseWhen": "behind-base-branch",
    "recreateWhen": "never",
    "reviewers": [
        "alvr",
    ],
    "packageRules": [
        {
            "groupName": "Kotlin Dependants",
            "groupSlug": "kotlin",
            "matchPackagePrefixes": [
                "com.google.devtools.ksp",
                "org.jetbrains.compose",
                "dev.mokkery",
            ],
            "matchPackagePatterns": [
                "org.jetbrains.kotlin.*",
                "org.jetbrains.kotlinx.*"
            ],
        },
        {
            "groupName": "Koin",
            "groupSlug": "koin",
            "matchPackagePrefixes": [
                "io.insert-koin",
            ],
        },
        {
            "groupName": "Kotest",
            "groupSlug": "kotest",
            "matchPackagePrefixes": [
                "io.kotest",
                "io.kotest.extensions",
            ],
        },
        {
            "groupName": "Sentry",
            "groupSlug": "sentry",
            "matchPackagePrefixes": [
                "io.sentry",
            ],
        },
        {
            "groupName": "Apollo",
            "groupSlug": "apollo",
            "matchPackagePatterns": [
                "com.apollographql.*",
            ],
        },
        {
            "groupName": "GitHub Actions",
            "groupSlug": "actions",
            "matchManagers": [
                "github-actions",
            ],
        },
        {
            "automerge": false,
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest",
            ],
        },
    ],
}
